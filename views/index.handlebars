<div class="jumbotron text-center bg-warning mb-0">
    <h1 class="text-danger">Welcome to Eat-Da-Burger!</h1>
</div>

<div class="container-fluid bg-danger mt-0">
    
    <div class="row">
        
        <div class="col-sm-6">
            
            <h1 class="text-center text-warning">Available Burgers</h1>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <div class="input-group">
                        <p class="lead">{{this.burger_name}}</p>
                        <span class="input-group-btn">
                            <form>
                                {{!-- <input id="changeDevoured" type="hidden" name="devoured" value="true"> --}}
                                <button class="btn btn-danger text-warning" id="eatIt" data-id="{{this.id}}" data-nowdevoured="{{devour}}" type="submit">Devour it!</button>
                            </form>
                        </span>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <h1 class="text-center text-warning">Devoured Burgers</h1>
            <div class="panel panel-default">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                        <p class="lead">{{this.burger_name}}</p>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
       
        <div class="col-sm-10 offset-1 text-center">
            
            <h2 class="text-center text-warning p-1 mt-3">Add a burger!</h2>

            <form class="create-form">
                <div class="form-group">
                    <input id="newBurgerName" class="form-control" type="text" placeholder="Enter the name of the new burger here...">
                </div>
                <button class="btn btn-warning btn-lg text-danger mb-2" type="submit">Submit</button>
            </form>
        </div>
    </div>

</div>
